@using QM.Core.Common;
<div class="ibox-title">
    <h5>邮件设置 <small>认真填写每项Item</small></h5>
</div>
<div class="ibox-content">
        <div class="form-group">
            <label class="col-sm-2 control-label">邮件名称</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" placeholder="邮件名称" name="qm_subject">
            </div>
            <div class="col-sm-4">
                @Html.DropDownList("qm_subdate", QMExtend.GetDateFormat(), new { @class = "form-control m-b" })
            </div>
        </div>
        <div class="hr-line-dashed"></div>
        <div class="form-group">
            <label class="col-sm-2 control-label">收件人</label>
            <div class="col-sm-10">

                <div class="input-group">
                    <select class="form-control" multiple="" id="to_list" name="to_list">
                    </select>
                    <input type="hidden" name="qm_to" id="qm_to" value=""/>
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-primary" id="to_remove">
                            移除
                        </button>
                    </span>
                </div>

                <div class="input-group">
                    <input type="text" class="form-control" placeholder="收件人地址" id="to" name="to">
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-primary" id="to_add">
                            添加
                        </button>
                    </span>
                </div>
            </div>
        </div>
        <div class="hr-line-dashed"></div>
        <div class="form-group">
            <label class="col-sm-2 control-label">抄送人</label>
            <div class="col-sm-10">

                <div class="input-group">
                    <select class="form-control" multiple="" id="cc_list" name="cc_list">
                    </select>
                    <input type="hidden" name="qm_cc" id="qm_cc" value="" />
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-primary" id="cc_remove">
                            移除
                        </button>
                    </span>
                </div>

                <div class="input-group">
                    <input type="text" class="form-control" placeholder="抄送人地址" id="cc" name="cc">
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-primary" id="cc_add">
                            添加
                        </button>
                    </span>
                </div>
            </div>
        </div>
        <div class="hr-line-dashed"></div>
        <div class="form-group">
            <label class="col-sm-2 control-label">密送人</label>
            <div class="col-sm-10">

                <div class="input-group">
                    <select class="form-control" multiple="" id="bcc_list" name="bcc_list">
                    </select>
                    <input type="hidden" name="qm_bcc" id="qm_bcc" value="" />
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-primary" id="bcc_remove">
                            移除
                        </button>
                    </span>
                </div>

                <div class="input-group">
                    <input type="text" class="form-control" placeholder="密送人地址" id="bcc" name="bcc">
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-primary" id="bcc_add">
                            添加
                        </button>
                    </span>
                </div>
            </div>
        </div>
        <div class="hr-line-dashed"></div>
        <div class="form-group">
            <label class="col-sm-2 control-label">内容</label>
            <div class="col-sm-10">
                <textarea class="form-control" name="qm_body" placeholder="邮件正文"></textarea>
            </div>
        </div>
</div>


<script type="text/javascript" src="~/Scripts/mail.js"></script>