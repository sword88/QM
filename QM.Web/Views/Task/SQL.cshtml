@using QM.Core.Common;

<div class="ibox-title">
    <h5>SQL报表 <small>认真填写每项Item</small></h5>
</div>
<div class="ibox-content">
    <form method="get" class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">SQL Header</label>
            <div class="col-sm-10">
                <textarea class="form-control" placeholder="多项用;分隔" name="sql_subject"></textarea>
            </div>
        </div>
        <div class="hr-line-dashed"></div>
        <div class="form-group">
            <label class="col-sm-2 control-label">文件名称</label>
            <div class="col-sm-4">
                <input type="text" placeholder="文件名称" class="form-control" name="sql_filename" id="sql_exppath">
            </div>
            <label class="col-sm-2 control-label">日期</label>
            <div class="col-sm-4">
                @Html.DropDownList("sql_expdate", QMExtend.GetDateFormat(), new { @class = "form-control m-b" })
            </div>
        </div>
        <div class="hr-line-dashed"></div>
        <div class="form-group">
            <label class="col-sm-2 control-label">保存路径</label>
            <div class="col-sm-4">
                <input type="text" placeholder="文件名称" class="form-control" name="sql_exppath" id="sql_exppath">
            </div>
            <label class="col-sm-2 control-label">文件类型</label>
            <div class="col-sm-4">
                @Html.DropDownList("sql_filetype", QMExtend.GetFileType(), new { @class = "form-control m-b" })
            </div>
        </div>
    </form>
</div>